function isParent($id, $categories){
    $t = '';
    foreach ($categories as $item) {
        if($item['parent_id'] == $id) {
            $t = true;
            break;
        }
    }
    if($t == true) {
        return true;
    } else {
        return false;
    }
}

$masive = array();
foreach ($categories as $item) {
    if($item["level"] == 2) {
        $masive[1][] = $item;
    } elseif ($item["level"] == 3) {
        $masive[2][] = $item;
    }
    elseif ($item["level"] == 4) {
        $masive[3][] = $item;
    }
}
$arr = array();
