<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_layout.xsd">
    <update handle="empty"/>
    <referenceContainer name="root">
        <container name="site.header" as="site.header" label="Header Container" htmlTag="header" htmlClass="site-header" before="-"/>
        <container name="banner" as="banner" label="Banner" htmlTag="section" htmlClass="banner" after="site.header"/>
        <container name="pop.product" as="pop.product" label="Pop Product" htmlTag="section" htmlClass="pop-product" after="banner"/>
        <container name="collections" as="collections" label="Collections" htmlTag="section" htmlClass="collections" after="pop.product"/>
        <container name="newsletter" as="newsletter" label="Newsletter" htmlTag="section" htmlClass="newsletter" after="collections"/>
        <container name="instagram" as="instagram" label="Instagram" htmlTag="section" htmlClass="instagram" after="newsletter"/>
        <container name="connect" as="connect" label="Connect" htmlTag="section" htmlClass="connect" after="instagram"/>
        <container name="site.footer" as="site.footer" label="Site Footer" htmlTag="section" htmlClass="site-footer" after="connect"/>
    </referenceContainer>
</layout>
